              	<!-- ==================================== SCP RCF Cap =====================================-->
 <ThingDef ParentName="ApparelSCPBase">
    <defName>Apparel_ScpRcfCap</defName>
    <label>RCF Cap (SCP) </label>
    <description>A multicam cap utilized by Rapid Containment Force opperatives</description>
    <graphicData>
      <texPath>Things/Apparel/Display/SCP/SCP_RCFcap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
	  <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>1200</WorkToMake>
      <Mass>0.07</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.12</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.40</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
	<equippedStatOffsets>
	  <PainShockThreshold>0.05</PainShockThreshold>
	  <ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>
	  <SocialImpact>0.05</SocialImpact>
	  <NegotiationAbility>0.02</NegotiationAbility>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Hats/SCP/SCP_RCFcap</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>SCP_RCFHeadgear</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
  
