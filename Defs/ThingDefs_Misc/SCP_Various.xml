        <!-- ======================================= SCP RCF Body Armor =======================================-->
  
 <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_ScpRcfBodyArmor</defName>
    <label>RCF Body Armor (SCP) </label>
    <description>A light armored vest utilized by the Rapid Containment Force.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>FlakArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Display/RCFArmoredVest</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>8900</WorkToMake>
      <MaxHitPoints>235</MaxHitPoints>
      <Mass>3.0</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>1.01</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.27</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>4.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.06</MoveSpeed>
	  <AimingDelayFactor>-0.9</AimingDelayFactor>
    </equippedStatOffsets>
    <thingCategories>
      <li>SCP_Armor</li>
    </thingCategories>
    <costList>
      <Cloth>20</Cloth>
      <Steel>45</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <apparel>
	<careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Armor/RCFArmoredVest</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
	    <li>SCP_RCFUniforms</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
  
