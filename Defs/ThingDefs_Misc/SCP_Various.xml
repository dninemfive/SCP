<?xml version="1.0" encoding="utf-8" ?>
<Defs>

           	<!-- ==================================== SCP RCF T shirt =====================================-->
			
	<ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_ScpRcfTShirt</defName>
    <description>A Shirt and camo pants worn by the Rapid Containment Force.</description>
    <label>RCF T-Shirt (SCP) </label>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Display/RapidContainmentForceTShirt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>85</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>SCP_Clothing</li>
    </thingCategories>
    <statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToMake>2500</WorkToMake>
      <Mass>0.35</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.12</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.12</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.0</EquipDelay>
    </statBases>
	
	<equippedStatOffsets>
	  <PainShockThreshold>0.02</PainShockThreshold>
	  <ShootingAccuracyPawn>0.01</ShootingAccuracyPawn>
	  <WorkSpeedGlobal>0.25</WorkSpeedGlobal>
	  <ForagedNutritionPerDay>0.20</ForagedNutritionPerDay>
    </equippedStatOffsets>
	
		<apparel>
      <bodyPartGroups>
        <li>Torso</li>
		<li>Shoulders</li>
		<li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Clothing/RapidContainmentForceTShirt</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>SCP_RCFUniforms</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
  
