    <!-- END -->
    <colorSpectrum>
 <li>(255,255,255)</li>
    </colorSpectrum>
    <startingGoodwill>
      <min>0</min>
      <max>0</max>
    </startingGoodwill>
    <naturalColonyGoodwill>
      <min>-50</min>
      <max>50</max>
    </naturalColonyGoodwill>
